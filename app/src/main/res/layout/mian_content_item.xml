<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/list_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px_in720p">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="收入"
                android:textColor="@color/blue_dan"
                android:textSize="@dimen/_32px_in720p" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/type"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="2017-3-16 19:23"
                android:textColor="@color/grey"
                android:textSize="@dimen/_26px_in720p" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@color/pop_txt_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_180px_in720p"
                android:layout_height="@dimen/_150px_in720p"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:src="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img"
                android:layout_alignTop="@+id/img"
                android:layout_marginLeft="@dimen/_40px_in720p"
                android:layout_toRightOf="@+id/img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="金额：33"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32px_in720p" />

                <TextView
                    android:id="@+id/kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="类型：伙食"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_30px_in720p" />

                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="备注：这是干了啥的呢"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_30px_in720p" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/des"
                    android:layout_width="@dimen/_90px_in720p"
                    android:layout_height="@dimen/_90px_in720p"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/_20px_in720p"
                    android:gravity="center"
                    android:src="@drawable/qz_55"
                    android:text="详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25px_in720p" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/isShow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40px_in720p"
        android:visibility="gone" />

</LinearLayout>