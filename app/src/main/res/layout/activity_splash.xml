    android:id="@+id/activity_sqlash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="com.geek.springdemo.activity.SplashActivity">

    <com.geek.springdemo.view.ParticleView
        android:id="@+id/pv_1"
