<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geek.springdemo.activity.MainActivity">

    <RelativeLayout
        android:background="@color/pop_txt_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--标题-->
        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90px_in720p"
            android:background="@color/red_dan">

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="@dimen/_100px_in720p"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:background="@drawable/menu" />

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="@dimen/_35px_in720p" />

        </RelativeLayout>

        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:text="记账"
            android:textSize="@dimen/_25px_in720p"
            android:layout_margin="@dimen/_60px_in720p"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/qz_55"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="@dimen/_100px_in720p" />

        <ListView
            android:layout_below="@+id/titleLayout"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:divider="@null"
            android:id="@+id/main_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <!--左侧布局-->
    <LinearLayout
        android:id="@+id/main_left"
        android:layout_width="@dimen/_400px_in720p"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/include_main_left_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
