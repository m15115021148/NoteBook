<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            style="@style/TextViewDetailStyle"
            android:maxLines="2"
            android:text="时间"
            android:textColor="@color/title_bg_dan"
            android:textSize="@dimen/_26px_in720p" />

        <TextView
            android:id="@+id/kind"
            style="@style/TextViewDetailStyle"
            android:text="类型"
            android:textColor="@color/title_bg_dan"
            android:textSize="@dimen/_26px_in720p" />

        <TextView
            android:id="@+id/money"
            style="@style/TextViewDetailStyle"
            android:text="金额"
            android:textColor="@color/title_bg_dan"
            android:textSize="@dimen/_26px_in720p" />

        <TextView
            android:id="@+id/look"
            style="@style/TextViewDetailStyle"
            android:text="查看"
            android:textColor="@color/title_bg_dan"
            android:textSize="@dimen/_26px_in720p" />

    </LinearLayout>


</LinearLayout>