<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.geek.springdemo.activity.HistoryCheckActivity">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:text="类别"
        android:textColor="@color/black"
        android:textSize="@dimen/_35px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income"
            android:layout_width="@dimen/_186px_in720p"
            android:layout_height="wrap_content"
            android:background="@drawable/history_type_bg"
            android:gravity="center"
            android:padding="@dimen/_10px_in720p"
            android:text="收入"
            android:textColor="@drawable/income_color_bg"
            android:textSize="@dimen/_32px_in720p" />

        <TextView
            android:id="@+id/expend"
            android:layout_width="@dimen/_186px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:background="@drawable/history_type_bg"
            android:gravity="center"
            android:padding="@dimen/_10px_in720p"
            android:text="支出"
            android:textColor="@drawable/income_color_bg"
            android:textSize="@dimen/_32px_in720p" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@color/pop_txt_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:text="消费类型"
        android:textColor="@color/black"
        android:textSize="@dimen/_35px_in720p" />

    <TextView
        android:id="@+id/kind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/kind_bg"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:hint="请选择"
        android:maxLines="1"
        android:padding="@dimen/_10px_in720p"
        android:textColor="@color/white"
        android:textSize="@dimen/_28px_in720p" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_50px_in720p"
        android:background="@color/pop_txt_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:text="时间段"
        android:textColor="@color/black"
        android:textSize="@dimen/_35px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startTime"
            android:textSize="@dimen/_28px_in720p"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px_in720p"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:layout_marginRight="@dimen/_40px_in720p"
            android:layout_weight="1"
            android:background="@drawable/history_type_bg"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/endTime"
            android:textSize="@dimen/_28px_in720p"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px_in720p"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:layout_marginRight="@dimen/_40px_in720p"
            android:layout_weight="1"
            android:background="@drawable/history_type_bg"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_50px_in720p"
        android:background="@color/pop_txt_bg" />

    <TextView
        android:id="@+id/sure"
        android:textSize="@dimen/_32px_in720p"
        android:gravity="center"
        android:textColor="@drawable/history_sure_color"
        android:text="查询"
        android:background="@drawable/history_sure_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_100px_in720p" />


</LinearLayout>
